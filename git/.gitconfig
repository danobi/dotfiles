[user]
	name = Daniel Xu
	email = dxu@dxuuu.xyz
[core]
	excludesfile = ~/.gitconf/gitignore
[alias]
	fixes = show -s --pretty='format:%h (\"%s\")\n'
	testedby = "!printf 'Tested-by: %s <%s>\n' \"$(git config --get user.name)\" \"$(git config --get user.email)\""
	patchset = "!git format-patch -o $(git rev-parse --show-toplevel)/outgoing/$(git rev-parse --abbrev-ref HEAD) -s"
[push]
	default = simple
[rebase]
	autosquash = true
[format]
	coverletter = auto
	signoff = true
	thread = shallow
[sendemail]
	smtpuser = dxu@dxuuu.xyz
	smtpserver = smtp.fastmail.com
	smtpserverport = 587
	smtpencryption = tls
	confirm = auto
	suppresscc = self
	tocmd = "$(git rev-parse --show-toplevel)/scripts/get_maintainer.pl --nogit --nogit-fallback --norolestats --nol"
	cccmd = "$(git rev-parse --show-toplevel)/scripts/get_maintainer.pl --nogit --nogit-fallback --norolestats --nom"
[pull]
	ff = only
